#Description: Gas hydrate regression test: Ice formation and methane supersaturation
#leading to hydrate formation

SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW flow
      MODE GENERAL
      OPTIONS
        WITH_HYDRATE
        RESTRICT_STATE_CHANGE
        USE_INFINITY_NORM_CONVERGENCE
      /
    /
  /
END

SUBSURFACE

#=========================== regression =======================================
REGRESSION
  CELLS
    2
  /
END

#=========================== discretization ===================================
GRID
  TYPE STRUCTURED CARTESIAN
  NXYZ 3 1 1
  DXYZ  
    3@1.d1
    1@1.d0
    1@1.d0
  /
END

#=========================== fluid properties =================================
FLUID_PROPERTY
  PHASE LIQUID
  DIFFUSION_COEFFICIENT 1.d-9
END

FLUID_PROPERTY
  PHASE GAS
  DIFFUSION_COEFFICIENT 2.d-5
END

#=========================== more fluid properties ============================
EOS WATER
  DENSITY IF97
  ENTHALPY IF97
  STEAM_DENSITY IF97
  STEAM_ENTHALPY IF97
END

EOS GAS
  DENSITY PR_METHANE
  ENTHALPY IDEAL_METHANE
  VISCOSITY DEFAULT
  HENRYS_CONSTANT DEFAULT
END


#=========================== material properties ==============================
MATERIAL_PROPERTY soil1
  ID 1
  CHARACTERISTIC_CURVES default
  POROSITY 0.3
  TORTUOSITY 1.d0
  ROCK_DENSITY 2600.d0
  THERMAL_CONDUCTIVITY_DRY 2.d0 #W/m-C
  THERMAL_CONDUCTIVITY_WET 2.18d0 #W/m-C
  HEAT_CAPACITY 1000 J/kg-C
  PERMEABILITY
    PERM_ISO 3.d-13
  /
  POROSITY_COMPRESSIBILITY 1.d-9
  SOIL_REFERENCE_PRESSURE INITIAL_PRESSURE
END


#=========================== characteristic curves ============================

CHARACTERISTIC_CURVES default
  SATURATION_FUNCTION IGHCC2_COMP #VAN_GENUCHTEN
    ALPHA 8.d-5
    M 0.45
    LIQUID_RESIDUAL_SATURATION 0.12d0
    MAX_CAPILLARY_PRESSURE 5.d6
    CALCULATE_INTERFACIAL_TENSION
  /
  PERMEABILITY_FUNCTION IGHCC2_COMP_LIQ #BURDINE_BC_LIQ
    PHASE LIQUID
    LAMBDA 3
    LIQUID_RESIDUAL_SATURATION 0.12
  /
  PERMEABILITY_FUNCTION IGHCC2_COMP_GAS #BURDINE_BC_GAS
    PHASE GAS
    LAMBDA 3
    LIQUID_RESIDUAL_SATURATION 0.12
    GAS_RESIDUAL_SATURATION 0.02
  /
END

#=========================== output options ===================================
OUTPUT
  UNFILTER_NON_STATE_VARIABLES
  
  VARIABLES
   TEMPERATURE
   LIQUID_PRESSURE
   GAS_PRESSURE
   LIQUID_SATURATION
   GAS_SATURATION
   HYDRATE_SATURATION
   ICE_SATURATION
   LIQUID_MOLE_FRACTIONS
   EFFECTIVE_POROSITY
  /
END

#=========================== times ============================================
TIME
  FINAL_TIME 10 d 
  INITIAL_TIMESTEP_SIZE 1.d-6 h
  MAXIMUM_TIMESTEP_SIZE 1.d0 d
END

#=========================== regions ==========================================
REGION all
  COORDINATES
    0.d0 0.d0 0.d0
    3.d1 1.d0 1.d0
  /
END

REGION east
  FACE EAST
  COORDINATES
    3.d1 0.d0 0.d0 
    3.d1 1.d0 1.d0 
  /
END

REGION west
  FACE WEST
  COORDINATES
    0.d0 0.d0 0.d0
    0.d0 1.d0 1.d0
  /
END

REGION center
  COORDINATE 15.d0 0.d0 0.d0
END

#=========================== flow conditions ==================================

FLOW_CONDITION initial
  TYPE
    LIQUID_PRESSURE DIRICHLET
    MOLE_FRACTION DIRICHLET
    TEMPERATURE DIRICHLET
  /
  LIQUID_PRESSURE 5.d6 #5.d6
  MOLE_FRACTION 1.d-3
  TEMPERATURE 1.d0 
END

FLOW_CONDITION center
  SYNC_TIMESTEP_WITH_UPDATE
  TYPE
    RATE TOTAL_MASS_RATE
  /
  RATE 0.d0 0.d0 -1.d3 g/s g/s W
END


#=========================== condition couplers ===============================
# initial condition
INITIAL_CONDITION all
  FLOW_CONDITION initial
  REGION all
END

SOURCE_SINK center
  FLOW_CONDITION center
  REGION center
END

BOUNDARY_CONDITION west
  FLOW_CONDITION initial
  REGION west
END

BOUNDARY_CONDITION east
  FLOW_CONDITION initial
  REGION east
END

#=========================== stratigraphy couplers ============================
STRATA
  REGION all
  MATERIAL soil1
END

#=========================== convergence criteria  ============================
END_SUBSURFACE
